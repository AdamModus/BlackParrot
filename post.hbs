{{!< default}}
{{! Everything inside the #post tags pulls data from the post }}
{{#post}}
{{! Header & Cover }}
<header class="m-b-2">

    {{> 'navbar'}}

  <div class="jumbotron jumbotron-fluid jumbotron-cover bg-inverse">
    {{#if image}}<div class="cover-bg" style="background-image: url({{image}})"></div>{{/if}}
    <div class="container text-xs-center">
      <h1 class="display-4">{{title}}</h1>
      <p>
        {{#author}}
        <a href="{{url}}" title="{{name}}" class="font-weight-bold">
        <img class="img-circle" src="{{image}}" alt="{{name}}" width="24" nopin="nopin"> {{name}}</a> 
        {{/author}} {{#if tags}} on {{#foreach tags}}<a href="{{url}}" title="{{name}}" class="tag-{{id}} font-italic">{{name}}</a> {{/foreach}} {{/if}} &nbsp;|&nbsp; 
        <i class="icon-calendar"></i> <time datetime="{{date format='YYYY-MM-DD'}}"> {{date format='YYYY-MM-DD'}}</time>           
      </p>
    </div>
  </div>

</header>

<main class="container" role="main">
    <div class="row">

        <article class="col-xs-12 {{post_class}}">

            <div class="card m-b-2">
                <div class="p-a-2">
                    {{content}}
                </div>

                <div class="p-b-2 share-post text-xs-center">

                    <hr>

					<h5 class="text-muted">Share this Post:</h5>

                    <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;" class="btn btn-secondary"><i class="icon-facebook"></i> Facebook</a>

                    <a href="https://twitter.com/intent/tweet?text={{title}}&amp;url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;" class="btn btn-secondary"><i class="icon-twitter"></i> Twitter</a>

                    <a href="https://plus.google.com/share?url={{url absolute="true"}}" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;" class="btn btn-secondary"><i class="icon-google-plus"></i> Google+</a>

				</div>

                <div class="p-a-2 card-inverse bg-inverse author-info">
                    {{#author}}
                    <div class="media m-b-0">
                        {{#if image}}
                        <figure class="media-left m-b-0">
                            <a href="{{url}}" title="Read more posts by {{name}}" class="internal-link">
                                <img alt="{{name}}" src="{{image}}" class="avatar img-thumbnail">
                            </a>
                        </figure>
                        {{/if}}

                        <section class="media-body">
                            <h4 class="font-weight-bold">
                                <a href="{{url}}" class="card-link internal-link" title="Read more posts by {{name}}">{{name}}</a>
                            </h4>
                            {{#if bio}}
                            <p class="card-text">
                                {{bio}}
                            </p>
                            {{else}}
                            <p class="card-text">Read <a href="{{url}}" title="Read more posts" class="font-weight-bold internal-link">more posts</a> by this author.</p>
                            {{/if}}
                            {{#if location}}
                            <span class="text-muted"><i class="icon-location"></i> {{location}}</span>{{/if}} {{#if website}}â€¢
                            <span class="text-muted"><i class="icon-link"></i> <a href="{{website}}" class="card-link">{{website}}</a></span>
                            {{/if}}
                        </section>

                    </div>
                    {{/author}}
                </div>

            </div>

        </article>

        <aside class="col-xs-12">
            {{!-- Related Posts --}}
            <div class="card-group">
                {{#next_post}}
                <div class="card card-inverse bg-inverse related">
                    <a href="{{url}}" title="{{title}}" class="internal-link">
                        <div class="card-img-cover" {{#if image}}style="background-image: url({{image}})"{{/if}}></div>

                        <div class="card-img-overlay">

                            <h2 class="card-title">{{title}}</h2>

                            <p class="card-text">
                                <small>
                                    <i class="fa fa-calendar"></i> <time  datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
                                </small>
                            </p>

                        </div>

                        <div class="card-footer bg-primary text-xs-center">
                            <span class="card-title h5"><i class="fa fa-chevron-circle-left"></i> Previous Post</span>
                        </div>
                    </a>
                </div>
                {{/next_post}}
                {{#prev_post}}
                <div class="card card-inverse bg-inverse related">
                    <a href="{{url}}" title="{{title}}"  class="internal-link">
                        <div class="card-img-cover" {{#if image}}style="background-image: url({{image}})"{{/if}}></div>

                        <div class="card-img-overlay">

                            <h2 class="card-title">{{title}}</h2>

                            <p class="card-text">
                                <small>
                                    <i class="fa fa-calendar"></i> <time  datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
                                </small>
                            </p>

                        </div>

                        <div class="card-footer bg-primary text-xs-center">
                          <span class="card-title h5">Next Post <i class="fa fa-chevron-circle-right"></i></span>
                        </div>
                    </a>
                </div>
                {{/prev_post}}
            </div>

        </aside>

    </div>
</main>

<script type="text/javascript">
    var disqus_shortname = 'blackpalm';
    var disqus_identifier = '{{post.id}}';

    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
</script>
{{/post}}
