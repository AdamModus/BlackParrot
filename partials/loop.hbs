{{#foreach posts}}
<article class="card card-block m-b-2 {{post_class}}">
  <header class="p-t-0 card-block">
      <h2 class="m-b-0 h1">
        <a href="{{url}}" title="{{{title}}}" class="text-muted">{{{title}}}</a>
        {{#if featured}}
        <small class="text-warning"><sup><i class="icon-star-full"></i></sup></small>
        {{/if}}        
      </h2>

      <small class="text-muted">
        {{#author}}
        <a href="{{url}}" title="{{name}}" class="font-weight-bold text-muted">
        <img class="img-circle" src="{{image}}" alt="{{name}}" width="18" nopin="nopin"> {{name}}</a> 
        {{/author}} {{#if tags}} on {{#foreach tags}}<a href="{{url}}" title="{{name}}" class="tag-{{id}} text-muted font-italic">{{name}}</a> {{/foreach}} {{/if}} &nbsp;|&nbsp; 
        <i class="icon-calendar"></i> <time datetime="{{date format='YYYY-MM-DD'}}"> {{date format='YYYY-MM-DD'}}</time>  
      </small>
      
  </header>
  <section class="p-y-0 card-block">
    <p class="m-b-0">{{excerpt words="26"}}</p>
  </section>
  
</article>
{{/foreach}}
