{{!< default}}
{{! Everything inside the #author tags pulls data from the author }}
{{#author}}
<header class="bg-primary set-shadow mbs-cover fadeIn animated">
    <div class="cover-bg" {{#if cover}} style="background-image: url({{cover}})"{{/if}}></div>

	{{> navbar}}

    <div class="container cover-inner">

        <div class="text-xs-center fadeIn animated">
            {{#if image}}
            <a href="{{url}}" title="{{name}}'s Posts" class="internal-link"><img class="img-circle img-thumbnail logo m-b-2" alt="{{name}}" src="{{image}}"></a>
            {{/if}}
            <h1 class="font-weight-bold">
            	<a href="{{url absolute="true"}}" title="{{name}}" class="internal-link">{{name}}</a>
            </h1>

			<p class="msb-desc-w"><i class="fa fa-file-text-o"></i> <strong>{{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}</strong> {{#if location}}• <i class="fa fa-map-marker"></i> São Paulo, Brazil{{/if}} {{#if website}}• <i class="fa fa-link"></i> <a href="{{website}}">{{website}}</a>{{/if}}</p>

			{{#if bio}}
            <div class="mbs-bio-w m-x-auto d-block p-a-1">
            	<em>{{bio}}</em>
            </div>
            {{/if}}
        </div>

    </div>
</header>
{{/author}}

<main class="container" role="main">
	{{#is "paged"}}
	<section class="row">
		<div class="col-xs-12">
		  {{pagination}}
		  <hr class="m-b-3 m-t-1">
		</div>
	</section>
	{{/is}}

	<section class="row">
	    {{^is "paged"}}
	    <div class="col-xs-12">
	      <div class="card card-block-title bg-primary card-inverse">
	        <h2 class="font-weight-bold m-b-0 card-text" id="lposts"><i class="fa fa-file-text-o"></i> Latest Posts</h2>
	      </div>
	    </div>
	    {{/is}}
		<div class="col-xs-12">
	    	{{> "loop"}}
	    </div>
    </section>

	<section class="row">
		<div class="col-xs-12">
		  <hr class="m-b-2 m-t-2">
		  {{pagination}}
		</div>
	</section>
</main>
